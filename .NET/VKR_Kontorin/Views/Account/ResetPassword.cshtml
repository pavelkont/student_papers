@model ResetPassword

@{
    ViewData["Title"] = "Reset Password";
}

<h1 style="text-align: center; margin-bottom:0.5em" class="bg-success text-white">Ввод нового пароля</h1>

<div class="text-danger" asp-validation-summary="All"></div>

<form asp-action="ResetPassword" method="post">
    <div class="form-group">
        <label>Пароль</label>
        <input asp-for="Password" class="form-control" value="Qqq!11Qqq"/>
    </div>
    <div class="form-group" style="margin-bottom:1em">
        <label>Подтвердите пароль</label>
        <input asp-for="ConfirmPassword" class="form-control" value="Qqq!11Qqq" />
    </div >
    <input type="hidden" asp-for="Email" class="form-control" />
    <input type="hidden" asp-for="Token" class="form-control" />
    <button class="btn btn-success" type="submit">Согласен</button>
</form>