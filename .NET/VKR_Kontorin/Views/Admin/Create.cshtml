@model User
@{
    ViewData["Title"] = "Create";
}

<h1 style="text-align: center; margin-bottom:0.5em;" class="bg-success text-white">Регистрация</h1>
<a asp-page="/Index" class="btn btn-secondary" style="margin-bottom:1em;">Назад</a>

<form method="post">
    <div class="form-group">
        <label asp-for="Name">Номер телефона в формате 9109999999</label>
        <input asp-for="Name" class="form-control" pattern="[0-9]{10}" required />
    </div>
    <div class="form-group">
        <label asp-for="Email">Адрес электронной почты</label>
        <input asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Owner">Являетесь ли Вы собственником техники?</label><br />
        <select name="Owner">
            <option value="true">да</option>
            <option value="false">нет</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Password">Пароль</label>
        <input type="password" asp-for="Password" class="form-control"  required />
    </div>
    <button type="submit" class="btn btn-success" style="margin-top:1em;">Создать</button>
</form>