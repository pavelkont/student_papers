@model AppUser
@{
    ViewData["Title"] = "UpdateUser";
}

<h1 style="text-align: center; margin-bottom: 0.5em" class="bg-primary text-white">Изменение данных пользователя</h1>

<a asp-action="Index" class="btn btn-secondary">Назад</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Update" method="post">
