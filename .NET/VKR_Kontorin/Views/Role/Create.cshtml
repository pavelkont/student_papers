@model string
@{
    ViewData["Title"] = "CreateRole";
}

<h1 style="text-align: center; margin-bottom: 0.5em;" class="bg-primary text-white">Создать роль</h1>
<a asp-action="Index" class="btn btn-secondary">Назад</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">Имя:</label>
        <input name="name" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success" style="margin-top:1em">Создать</button>
</form>